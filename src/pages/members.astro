---
import Layout from '../layouts/Layout.astro';
import MemberCard from '../components/MemberCard';
import { getCollection } from 'astro:content';

const members = await getCollection('members', ({ data }) => data.active === true);
const sortedMembers = members.sort((a, b) => a.data.order - b.data.order);

const executiveMembers = sortedMembers.filter(m =>
  ['President', 'President-elect', 'Secretary', 'Treasurer'].includes(m.data.role)
);

const regionalReps = sortedMembers.filter(m => m.data.region);
const coordinators = sortedMembers.filter(m =>
  m.data.role.includes('Coordinator') || m.data.role.includes('coordinator')
);
---

<Layout title="Members">
  <div class="page-hero">
    <div class="container">
      <h1>Our Team</h1>
      <p class="page-description">
        Meet the dedicated researchers and professionals leading the ISMRM-ANZ chapter forward.
      </p>
    </div>
  </div>

  <div class="container">
    <section class="member-section">
      <div class="section-header-inline">
        <h2>Executive Committee</h2>
        <p>Leadership guiding our chapter's strategic direction</p>
      </div>
      <div class="member-grid">
        {executiveMembers.map((member) => (
          <MemberCard
            client:load
            name={member.data.name}
            role={member.data.role}
            title={member.data.title}
            image={member.data.image}
            slug={member.slug}
          />
        ))}
      </div>
    </section>

    {regionalReps.length > 0 && (
      <section class="member-section">
        <div class="section-header-inline">
          <h2>Regional Representatives</h2>
          <p>Connecting our community across Australia and New Zealand</p>
        </div>
        <div class="member-grid">
          {regionalReps.map((member) => (
            <MemberCard
              client:load
              name={member.data.name}
              role={`${member.data.region} Representative`}
              title={member.data.title}
              image={member.data.image}
              slug={member.slug}
            />
          ))}
        </div>
      </section>
    )}

    {coordinators.length > 0 && (
      <section class="member-section">
        <div class="section-header-inline">
          <h2>Outreach Coordinators</h2>
          <p>Fostering engagement and community connections</p>
        </div>
        <div class="member-grid">
          {coordinators.map((member) => (
            <MemberCard
              client:load
              name={member.data.name}
              role={member.data.role}
              title={member.data.title}
              image={member.data.image}
              slug={member.slug}
            />
          ))}
        </div>
      </section>
    )}
  </div>
</Layout>

<style>
  .page-hero {
    padding: 4rem 0 3rem;
    background: var(--gradient-subtle);
    border-bottom: 1px solid var(--border-light);
  }

  .page-hero h1 {
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.25rem;
    color: var(--text-medium);
    max-width: 700px;
  }

  .member-section {
    margin: 5rem 0;
  }

  .section-header-inline {
    margin-bottom: 3rem;
  }

  .section-header-inline h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .section-header-inline p {
    font-size: 1.0625rem;
    color: var(--text-medium);
  }

  .member-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .member-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .member-section {
      margin: 3rem 0;
    }

    .section-header-inline h2 {
      font-size: 1.75rem;
    }
  }
</style>