---
import Layout from './Layout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <article class="markdown-content">
    <div class="content-wrapper">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .markdown-content {
    padding: 3rem 0 5rem;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Reset default heading sizes and spacing */
  .content-wrapper :global(h1) {
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0 0 1.5rem 0;
    color: var(--text-dark);
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .content-wrapper :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 2.5rem 0 1rem 0;
    color: var(--text-dark);
    line-height: 1.3;
    letter-spacing: -0.01em;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border-light);
  }

  .content-wrapper :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem 0;
    color: var(--text);
    line-height: 1.4;
  }

  .content-wrapper :global(h4) {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 1.5rem 0 0.5rem 0;
    color: var(--text);
  }

  .content-wrapper :global(p) {
    margin-bottom: 1rem;
    color: var(--text-medium);
    font-size: 1rem;
    line-height: 1.7;
  }

  .content-wrapper :global(ul),
  .content-wrapper :global(ol) {
    margin: 1rem 0 1.5rem 0;
    padding-left: 1.5rem;
    color: var(--text-medium);
  }

  .content-wrapper :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .content-wrapper :global(li strong) {
    color: var(--text);
    font-weight: 600;
  }

  .content-wrapper :global(a) {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    border-bottom: 1px solid transparent;
  }

  .content-wrapper :global(a:hover) {
    color: var(--primary-dark);
    border-bottom-color: var(--primary);
  }

  .content-wrapper :global(strong) {
    font-weight: 600;
    color: var(--text);
  }

  .content-wrapper :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 1.5rem 0;
    box-shadow: var(--shadow);
  }

  /* First paragraph styling */
  .content-wrapper :global(h1 + img) {
    margin-bottom: 2rem;
  }

  .content-wrapper :global(h1 + p) {
    font-size: 1.125rem;
    color: var(--text);
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  /* Section styling */
  .content-wrapper :global(h2:first-of-type) {
    margin-top: 3rem;
  }

  @media (max-width: 768px) {
    .markdown-content {
      padding: 2rem 0 3rem;
    }

    .content-wrapper :global(h1) {
      font-size: 2rem;
    }

    .content-wrapper :global(h2) {
      font-size: 1.5rem;
      margin-top: 2rem;
    }

    .content-wrapper :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>